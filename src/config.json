{
  "theme": "afterglow",
  "db_file": "~/.config/music-player/music.db",
  "log_file": "~/.config/music-player/player.log",
  "log_level": "DEBUG",
  "input_interval": 0.02,
  "debug": true,
  "plugins_reload_debounce_time": 0.3,
  "plugins_paths": [
    "~/.config/music-player/"
  ],
  "default_context": "playlist",

  "plugins": [
    "test_plug",
    "debug",
    "bar",
    "commands_palette",
    "library",
    "scan",
    "track_scheduler",
    "playlist",
    "search"
    // "tray_menu",
  ],

  "cloud": [],

  "playlist": {
    "columns": [
      {
        "field": "track_number",
        "name": "NO",
        "priority": 1,
        "size": 3
      },
      {
        "field": "title",
        "name": "TITLE",
        "priority": 1
      },
      {
        "field": "album",
        "name": "ALBUM",
        "priority": 1
      },
      {
        "field": "artist",
        "name": "ARTIST",
        "priority": 1
      },
      {
        "field": "length",
        "name": "LENGTH",
        "priority": 1,
        "size": 6,
        "format": "time"
      }
    ]
  },

  "keybindings": [
    {
      "keys": ["q", "<exit>"],
      "command": "quit"
    },
    {
      "keys": ["<home>"],
      "command": "navigate_list_top"
    },
    {
      "keys": ["<end>"],
      "command": "navigate_list_bottom"
    },
    {
      "keys": ["<npage>"],
      "command": "navigate_next_page"
    },
    {
      "keys": ["<ppage>"],
      "command": "navigate_previous_page"
    },
    {
      "keys": ["<down>", "j"],
      "command": "navigate_list_by",
      "args": [1]
    },
    {
      "keys": ["<up>", "k"],
      "command": "navigate_list_by",
      "args": [-1]
    },
    {
      "keys": ["<enter>"],
      "command": "play_track",
      "context": "tracks"
    },
    {
      "keys": ["<space>"],
      "command": "pause_track"
    },
    {
      "keys": ["<left>", "h"],
      "command": "rewind_by_seconds",
      "args": [-5]
    },
    {
      "keys": ["<right>", "l"],
      "command": "rewind_by_seconds",
      "args": [5]
    },
    {
      "keys": ["["],
      "command": "rewind_by_seconds",
      "args": [-30]
    },
    {
      "keys": ["]"],
      "command": "rewind_by_seconds",
      "args": [30]
    },
    {
      "keys": ["z"],
      "command": "rewind_by_percentage",
      "args": [-0.2]
    },
    {
      "keys": ["x"],
      "command": "rewind_by_percentage",
      "args": [0.2]
    },
    {
      "keys": ["c"],
      "command": "rewind_to_percentage",
      "args": [0.5]
    },
    {
      "keys": ["v"],
      "command": "rewind_to_percentage",
      "args": [0.0]
    },
    {
      "keys": ["p"],
      "command": "previous_track"
    },
    {
      "keys": ["n"],
      "command": "next_track"
    },
    {
      "keys": ["r"],
      "command": "random_track"
    },
    {
      "keys": ["/"],
      "command": "search"
    },
    {
      "keys": [":", ";"],
      "command": "open_palette"
    },
    {
      "keys": ["<esc>", "<exit>", "<enter>"],
      "command": "dismiss_error",
      "context": "error"
    },
    {
      "keys": ["<resize>"],
      "command": "refresh"
    },
    {
      "keys": ["d"],
      "command": "debug_dump_layout"
    },
    {
      "keys": ["P"],
      "command": "toggle_playlists"
    }
  ]
}
