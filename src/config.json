{
  "theme": "afterglow",
  "db_file": "~/.config/music-player/music.db",
  "log_file": "~/.config/music-player/player.log",
  "log_level": "DEBUG",
  "input_interval": 0.02,
  "debug": true,
  "plugins_reload_debounce_time": 0.3,
  "plugins_paths": [
    "~/.config/music-player/"
  ],
  "default_context": "playlist",

  "plugins": [
    "test_plug",
    "debug",
    "bar",
    "commands_palette",
    "library",
    "scan"
    // "playlist",
    // "errors_view",
    // "track_scheduler",
    // "tray_menu",
    // "search"
  ],

  "cloud": [],

  "layout": {
    "class": "Layout",
    "direction": "vertical",
    "components": [
      {
        "class": "Layout",
        "direction": "horizontal",
        "components": [
          {
            "class": "Layout",
            "id": "mainview",
            "color": "test2"
          },
          {
            "class": "Layout",
            "id": "sidebar",
            "color": "test2"
          }
        ]
      },
      {
        "class": "Layout",
        "id": "toolbar",
        "desired_size": 5
      },
      {
        "class": "Bar",
        "id": "bar",
        "desired_size": 1,
        "color": "bar"
      }
    ]
  },

  "playlist": {
    "open_in": "mainview",
    "columns": [
      {
        "field": "track_number",
        "name": "NO",
        "priority": 1,
        "size": 3
      },
      {
        "field": "title",
        "name": "TITLE",
        "priority": 1
      },
      {
        "field": "album",
        "name": "ALBUM",
        "priority": 1
      },
      {
        "field": "artist",
        "name": "ARTIST",
        "priority": 1
      },
      {
        "field": "length",
        "name": "LENGTH",
        "priority": 1,
        "size": 6,
        "format": "time"
      }
    ]
  },

  "keybindings": [
    {
      "keys": ["q", "<exit>"],
      "command": "quit"
    },
    {
      "keys": ["<home>"],
      "command": "navigate_list_top"
    },
    {
      "keys": ["<end>"],
      "command": "navigate_list_bottom"
    },
    {
      "keys": ["<npage>"],
      "command": "navigate_next_page"
    },
    {
      "keys": ["<ppage>"],
      "command": "navigate_previous_page"
    },
    {
      "keys": ["<down>"],
      "command": "navigate_list_by",
      "args": [1]
    },
    {
      "keys": ["<up>"],
      "command": "navigate_list_by",
      "args": [-1]
    },
    {
      "keys": ["<right>"],
      "command": "autocomplete_input"
    },
    {
      "keys": ["<enter>"],
      "command": "play_track",
      "context": "playlist"
    },
    {
      "keys": ["<space>"],
      "command": "pause_track",
      "context": "playlist"
    },
    {
      "keys": ["<left>"],
      "command": "rewind",
      "args": [-10]
    },
    {
      "keys": ["<right>"],
      "command": "rewind",
      "args": [10]
    },
    {
      "keys": ["[>"],
      "command": "rewind",
      "args": [-30]
    },
    {
      "keys": ["]"],
      "command": "rewind",
      "args": [30]
    },
    {
      "keys": ["p"],
      "command": "previous_track"
    },
    {
      "keys": ["n"],
      "command": "next_track"
    },
    {
      "keys": ["r"],
      "command": "random_track"
    },
    {
      "keys": ["/"],
      "command": "search",
      "args": ["kaczmarski"]
    },
    {
      "keys": [":", ";"],
      "command": "open_palette"
    },
    {
      "keys": ["<esc>", "<exit>", "<enter>"],
      "command": "dismiss_error",
      "context": "error"
    },
    {
      "keys": ["<resize>"],
      "command": "refresh"
    },
    {
      "keys": ["d"],
      "command": "debug_dump_layout"
    }
  ]
}
