{
    "theme": "afterglow",
    "logFile": "player.log",
    "logLevel": "DEBUG",
    "input_interval": 0.02,
    "debug": true,
    "plugins_reload_debounce_time": 0.3,
    "plugins_paths": [
        "~/.config/player/"
    ],
    "default_context": "playlist",

    "plugins": [
        "test_plug",
        "bar",
        "playlist",
        "errors_view",
        "commands_palette"
    ],

    "layout": {
        "class": "Layout",
        "direction": "vertical",
        "components": [
            {
                "class": "Layout",
                "direction": "horizontal",
                "components": [
                    {
                        "class": "Layout",
                        "id": "mainview",
                        "color": "test2"
                    }
                ]
            },
            {
                "class": "Layout",
                "id": "bottomview",
                "desired_size": 5
            },
            {
                "class": "Bar",
                "id": "bar",
                "desired_size": 1,
                "color": "bar"
            }
        ]
    },

    "playlist": {
        "open_in": "mainview",
        "columns": [
            {
                "field": "name",
                "name": "name",
                "priority": 1
            },
            {
                "field": "id",
                "name": "id",
                "priority": 1
            },
            {
                "field": "length",
                "name": "length",
                "priority": 1
            }
        ]
    },

    "palette": {
        "open_in": "bottomview"
    },

    "errors": {
        "open_in": "bottomview"
    },

    "keybindings": [
        {
            "keys": ["q"],
            "command": "quit"
        },
        {
            "keys": ["<home>"],
            "command": "navigate_list_top"
        },
        {
            "keys": ["<end>"],
            "command": "navigate_list_bottom"
        },
        {
            "keys": ["<pagedown>"],
            "command": "navigate_next_page"
        },
        {
            "keys": ["<pageup>"],
            "command": "navigate_previous_page"
        },
        {
            "keys": ["<arrowdown>"],
            "command": "navigate_list_by",
            "args": [1]
        },
        {
            "keys": ["<arrowup>"],
            "command": "navigate_list_by",
            "args": [-1]
        },
        {
            "keys": ["<arrowright>"],
            "command": "autocomplete_input"
        },
        {
            "keys": ["<enter>"],
            "command": "play_track",
            "context": "playlist"
        },
        {
            "keys": ["<space>"],
            "command": "pause_track",
            "context": "playlist"
        },
        {
            "keys": ["<arrowleft>"],
            "command": "rewind",
            "args": [-30]
        },
        {
            "keys": ["<arrowright>"],
            "command": "rewind",
            "args": [30]
        },
        {
            "keys": ["p"],
            "command": "previous_track"
        },
        {
            "keys": ["n"],
            "command": "next_track"
        },
        {
            "keys": ["/"],
            "command": "search"
        },
        {
            "keys": ["<enter>"],
            "command": "commit_search",
            "context": "search"
        },
        {
            "keys": [":"],
            "command": "open_palette"
        },
        {
            "keys": ["<enter>"],
            "command": "run_command",
            "context": "palette"
        },
        {
            "keys": ["<esc>", "<interrupt>"],
            "command": "pop_context"
        },
        {
            "keys": ["<resize>"],
            "command": "refresh"
        }
    ]
}
